#include <iostream>
using namespace std;

int main() {

	const int MAX = 5;
	int intArrays[MAX] = { 2, 4, 6, 8, 10 };

	int * ptr = nullptr;

	ptr = intArrays;


	cout << "The value of pointed to by ptr is :" << *ptr << endl;

	cout << "The address of element 1 of intArrays :" << &intArrays[0] << endl;
	cout << "The address of element 1 of intArrays :" << &intArrays[1] << endl;



	return 0;
}
