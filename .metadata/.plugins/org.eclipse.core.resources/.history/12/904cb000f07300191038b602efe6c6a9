double DotProduct(const double vector1[], const double vector2[], int len) {
	double product = 0;

	for (int i = 0; i < len; i++) {

		product += vector1[i] * vector2[i];

	}

	return product;
}

char GetCharacter(const char * prompt, const char * error) {

	char input;
	bool failure;

	do {

		cout << prompt;

		cin >> input;

		if (cin.fail()) {
			cin.clear();
			cin.ignore(IGNORE_CHARS, '\n');
			cout << error << endl;
			failure = true;

		} else {
			cin.ignore(IGNORE_CHARS, '\n');
			if (isalpha(input)) {
				input = tolower(input);
			} else {
				cout << error << endl;
				failure = true;
			}
		}

	} while (failure);

	return input;

}

