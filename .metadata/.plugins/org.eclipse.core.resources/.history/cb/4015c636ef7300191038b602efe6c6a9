#include <iostream>
using namespace std;

double DotProduct(const double vector1[], const double vector2[], int len);
char GetCharacter(const char * prompt, const char * error);

const int VEC_LEN = 3;
const int IGNORE_CHARS = 256;
int main() {



	double vector1[VEC_LEN] = { 1, 4, 7 };
	double vector2[VEC_LEN] = { 2, 5, 8 };

	cout << "The dot product of vector1 and vector2 is : "
			<< DotProduct(vector1, vector2, VEC_LEN) << endl;

	return 0;
}

double DotProduct(const double vector1[], const double vector2[], int len) {
	double product = 0;

	for (int i = 0; i < len; i++) {

		product += vector1[i] * vector2[i];

	}

	return product;
}

char GetCharacter(const char * prompt, const char * error) {

	char input;
	bool failure;

	do {

		cout << prompt;

		cin >> input;

		if(cin.fail())
		{
			cin.clear();
			cin.ignore(IGNORE_CHARS,'\n');
			bool = true;
		}else{

		}


	}while(failure);

}





















